<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Change Your Username"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/Cauldron_Orange"/>

    <EditText
        android:id="@+id/editusername_getPin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:hint="Enter security PIN"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/editusername_getUsername"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:hint="Enter new username"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/editusername_confirmUsername"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:hint="Confirm new username"
        android:inputType="text"
        />

    <Button
        android:id="@+id/editusername_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Save"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@color/Cauldron_Orange"
        android:textSize="20dp"
        android:textStyle="bold"
        />

</LinearLayout>